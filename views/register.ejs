<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <script defer src="/scripts/register.js"></script>
  </head>

  <body>
    <header><%- include('partials/header'); %></header>

    <div class="container-fluid adjust-fill d-flex flex-grow-1">
      <div class="d-flex flex-grow-1 justify-content-center align-items-center">
        <form id="signup-form" action="/auth/signup" method="POST">
          <h1 class="py-3">Register to Play!</h1>
          <!-- email -->
          <div class="form-group was-validated input-group-lg py-3">
            <input
              id="email"
              name="email"
              type="text"
              class="form-control"
              placeholder="Your Email"
              required
            />
          </div>
          <!-- username -->
          <div class="form-group was-validated input-group-lg py-3">
            <input
              id="username"
              name="username"
              type="text"
              class="form-control"
              placeholder="Your Username"
              required
            />
          </div>
          <!-- password -->
          <div class="form-group was-validated input-group-lg py-3">
            <input
              id="password"
              name="password"
              type="password"
              class="form-control"
              placeholder="Password"
              required
            />
          </div>
          <!-- submit -->
          <div class="row">
            <div class="col py-3 d-flex justify-content-start">
              <a href="/login">
                <button
                  type="button"
                  class="btn fw-bold btn-outline-light btn-lg"
                >
                  Login instead
                </button>
              </a>
            </div>
            <div class="col py-3 d-flex justify-content-end">
              <input
                type="submit"
                class="btn fw-bold btn-outline-light btn-lg"
                value="Register"
              />
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
