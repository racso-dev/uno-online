body {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.content {
  border: 2px lightgray solid;
  border-radius: 8px;
  overflow: hidden;
  width: 70vw;
  height: 80vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
}


.content ul {
  background-color: aliceblue;
  display: flex;
  align-items: center;
  padding: 16px;
  justify-content: space-between;
}

.elem {
  flex: 1;
  align-self: center;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background-color: aqua; */
}

.logo {
  align-self: center;
}

form {
  display: flex;
  flex-direction: column;
  align-items: center;
}
